{% extends "layout.html" %}
{% block title %}Dashboard{% endblock %}
{% block header %}Dashboard{% endblock %}

{% block content %}
  <!-- … your cards, filters, etc … -->
  <div class="charts">
    <div class="chart-card"><h4>Monthly Bookings</h4>
      <canvas id="bookingsChart"></canvas>
    </div>
    <div class="chart-card"><h4>Revenue Trend</h4>
      <canvas id="revenueChart"></canvas>
    </div>
    <div class="chart-card"><h4>Guests Over Time</h4>
      <canvas id="guestChart"></canvas>
    </div>
  </div>
{% endblock %}

{% block scripts %}
  <!-- expose your Python data as JSON-safe globals -->
  <script>
    window.DASHBOARD = {
      bookings: {
        labels: {{ bookings_labels|tojson }},
        data:   {{ bookings_data  |tojson }}
      },
      revenue: {
        labels: {{ revenue_labels|tojson }},
        data:   {{ revenue_data  |tojson }}
      },
      guests: {
        labels: {{ guests_labels|tojson }},
        data:   {{ guests_data  |tojson }}
      }
    };
  </script>
  <script src="{{ url_for('static', filename='js/dashboard.js') }}"></script>
{% endblock %}
